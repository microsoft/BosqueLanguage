{
    "compilerOptions": {
        "module": "commonjs",
        "strict": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "strictNullChecks": true,
        "target": "es2020",
        "sourceMap": true,
        "outDir": "bin"
    },
    "include": [
        "src/ast/*.ts",
        "src/type_checker/*.ts",
        "src/compiler/*.ts",
        "src/tooling/verifier/*.ts",
        "src/tooling/icpp/transpiler/*.ts"
    ]
}
