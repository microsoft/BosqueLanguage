namespace Main;


function createDefaultEmptyDB(): Database {
    return Database{
        "default",
        LogicalTime::zero,
        List<DBEntryFormat>{
            DBEntryFormat{true, 0n, "User", none},
            DBEntryFormat{false, 1n, "Name", none},
            DBEntryFormat{false, 2n, "ID", /[a-z]+/}
        },
        Map<String, DBFieldID>{
            "User" => 0n,
            "Name" => 1n,
            "ID" => 2n
        },
        List<DBRecordData>{
        }
    };
}

function createDefault3DB(): Database {
    return Database{
        "default",
        LogicalTime::zero,
        List<DBEntryFormat>{
            DBEntryFormat{true, 0n, "User", none},
            DBEntryFormat{false, 1n, "Name", none},
            DBEntryFormat{false, 2n, "ID", /[a-z]+/}
        },
        Map<String, DBFieldID>{
            "User" => 0n,
            "Name" => 1n,
            "ID" => 2n
        },
        List<DBRecordData>{
            List<String>{"--", "Bob", "bob"},
            List<String>{"--", "Steve", "sam"},
            List<String>{"--", "Eugene", "az"}
        }
    };
}

entrypoint function main(): Bool {
    let dd = createDefault3DB();
    return !dd.empty(); //dd.numRecords() == 3n;
}