chktest function sign_1(): Bool {
    return sign_impl(5I) == 1i;
}

chktest function sign_2(): Bool {
    return abs(-3I) == 3I;
}

errtest function divok(x: BigInt, y: BigInt): Result<BigInt> {
    return div_fix_impl(x, y);
}

chktest function div_small(x: BigInt, y: BigInt): Bool 
    requires y != 0I;
{
    let dval = div_fix_impl().result();
    let dvalabs = abs_impl(dval);

    return dvalabs < abs_impl(x);
}
