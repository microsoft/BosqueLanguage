        elif(l.is<Vector1<T>>()) {
            return p[recursive?](l.v0);
        }
        elif(l.is<Vector2<T>>()) {
            return \/(p[recursive?](l.v0), p[recursive?](l.v1));
        }
        elif(l.is<Vector3<T>>()) {
            return \/(p[recursive?](l.v0), p[recursive?](l.v1), p[recursive?](l.v2));
        }
        else {
            return l.has_pred[recursive?](p);
        }
