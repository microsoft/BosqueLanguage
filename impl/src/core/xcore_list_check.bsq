    recursive? function s_sort<T>(l: ListRepr<T>, cmp: recursive? pred(_: T, _: T) -> Bool): ListRepr<T> {
        if(l === none) {
            return none;
        }
        elif(l.is<Vector1<T>>()) {
            return l;
        }
        elif(l.is<Vector2<T>>()) {
            if(!cmp[recursive?](l.v1, l.v0)) {
                return l;
            }
            else {
                return List<T>@{at1, at0};
            }
        }
        elif(l.is<Vector3<T>>()) {
            let l10 = cmp[recursive?](l.v1, l.v0);
            let l20 = cmp[recursive?](l.v2, l.v0);
            let l21 = cmp[recursive?](l.v2, l.v1);

            if(/\(l20, l21)) {
                if(l10) {
                    return Vector3<T>{l.v2, l.v1, l.v0};
                }
                else {
                    return Vector3<T>{l.v2, l.v0, l.v1};
                }
            }
            elif(/\(l10, !l21)) {
                if(l20) {
                    return Vector3<T>{l.v1, l.v2, l.v0};
                }
                else {
                    return Vector3<T>{l.v1, l.v0, l.v2};
                }
            }
            else {
                if(l21) {
                    return Vector3<T>{l.v0, l.v2, l.v1};
                }
                else {
                    return Vector3<T>{l.v0, l.v1, l.v2};
                }
            }
        }
        else {
            return l.sort[recursive](eq);
        }
    }

    recursive? function s_unique_from_sorted<T>(l: ListRepr<T>, eq: recursive? pred(_: T, _: T) -> Bool): ListRepr<T> {
        if(l === none) {
            return none;
        }
        elif(l.is<Vector1<T>>()) {
            return l;
        }
        elif(l.is<Vector2<T>>()) {
            if(eq[recursive?](l.v0, l.v1)) {
                return Vector1<T>{l.v0};
            }
            else {
                return l;
            }
        }
        elif(l.is<Vector3<T>>()) {
            let eq01 = eq[recursive?](l.v0, l.v1);
            let eq02 = eq[recursive?](l.v0, l.v2);
            let eq12 = eq[recursive?](l.v1, l.v2);
            

            if(/\(eq01, eq02)) {
                return Vector1<T>{l.v0};
            }
            elif(eq01) {
                return Vector2<T>{l.v0, l.v2};
            }
            elif(eq02) {
                return Vector2<T>{l.v0, l.v1};
            }
            elif(eq12) {
                return Vector2<T>{l.v0, l.v1};
            }
            else {
                return l;
            }
        }
        else {
            let lle = l.unique_from_sorted[recursive](eq);
            return RecList<T>::s_ensure_repr(lle);
        }
    }
    
    function s_reverse(l: ListRepr<T>): ListRepr<T> {
        if(l === none) {
            return none;
        }
        elif(l.is<Vector1<T>>()) {
            return l;
        }
        elif(l.is<Vector2<T>>()) {
            return Vector2<T>{l.v1, l.v0};
        }
        elif(l.is<Vector3<T>>()) {
            return Vector3<T>{l.v2, l.v1, l.v0};
        }
        else {
            return l.reverse[recursive]();
        }
    }

    recursive? function s_reduce<T, U>(init: U, op: recursive? fn(_: U, _: T) -> U): U {
        if(l === none) {
            return init;
        }
        elif(l.is<Vector1<T>>()) {
            return op[recursive?](init, l.v0);
        }
        elif(l.is<Vector2<T>>()) {
            return op[recursive?](op[recursive?](init, l.v0), l.v1);
        }
        elif(l.is<Vector3<T>>()) {
            return op[recursive?](op[recursive?](op[recursive?](init, l.v0), l.v1), l.v2);
        }
        else {
            return l.reduce<U>[recursive](init, op);
        }
    }

    recursive? function s_reduce_idx<T, U>(init: U, op: recursive? fn(_: U, _: T, _: Nat) -> U): U {
        if(l === none) {
            return init;
        }
        elif(l.is<Vector1<T>>()) {
            return op[recursive?](init, l.v0, 0n);
        }
        elif(l.is<Vector2<T>>()) {
            return op[recursive?](op[recursive?](init, l.v0, 0n), l.v1, 1n);
        }
        elif(l.is<Vector3<T>>()) {
            return op[recursive?](op[recursive?](op[recursive?](init, l.v0, 0n), l.v1, 1n), l.v2, 2n);
        }
        else {
            return l.reduce_idx<U>[recursive?](init, 0n, op);
        }
    }

    recursive? function s_transduce<T, E, U>(env: E, op: recursive? fn(_: T, _: T) -> E, U): E, ListRepr<U> {
        if(l === none) {
            return env, none;
        }
        elif(l.is<Vector1<T>>()) {
            let e0, v0 = op[recursive?](env, l.v0);
            return e0, Vector1<U>{v0};
        }
        elif(l.is<Vector2<T>>()) {
            let e0, v0 = op[recursive?](env, l.v0);
            let e1, v1 = op[recursive?](e0, l.v1);
            return e1, Vector2<U>{v0, v1};
        }
        elif(l.is<Vector3<T>>()) {
            let e0, v0 = op[recursive?](env, l.v0);
            let e1, v1 = op[recursive?](e0, l.v1);
            let e2, v2 = op[recursive?](e1, l.v2);
            return e2, Vector2<U>{v0, v1, v2};
        }
        else {
            return l.transduce<E, U>[recursive](env, op);
        }
    }

    recursive? function s_transduce_idx<T, E, U>(env: E, op: recursive? fn(_: E, _: T, _: Nat) -> E, U): E, ListRepr<U> {
        if(l === none) {
            return env, none;
        }
        elif(l.is<Vector1<T>>()) {
            let e0, v0 = op[recursive?](env, l.v0, 0n);
            return e0, Vector1<U>{v0};
        }
        elif(l.is<Vector2<T>>()) {
            let e0, v0 = op[recursive?](env, l.v0, 0n);
            let e1, v1 = op[recursive?](e0, l.v1, 1n);
            return e1, Vector2<U>{v0, v1};
        }
        elif(l.is<Vector3<T>>()) {
            let e0, v0 = op[recursive?](env, l.v0, 0n);
            let e1, v1 = op[recursive?](e0, l.v1, 1n);
            let e2, v2 = op[recursive?](e1, l.v2, 2n);
            return e2, Vector2<U>{v0, v1, v2};
        }
        else {
            return l.transduce_idx<E, U>[recursive](env, 0n, op);
        }
    }
}

internal entity RecList<T> provides Some {
    field head: T;
    field tail RecList<T>?;

    function s_ensure_list(l: Vector1<T> | Vector2<T> | Vector3<T> | RecList<T>): RecList<T> {
        if(l.is<RecList<T>>()) {
            return l;
        }
        else {
            if(l.is<Vector1<T>>()) {
                return RecList<T>{l.v0, none};
            }
            elif(l.is<Vector2<T>>()) {
                return RecList<T>{l.v0, RecList<T>{l.v1, none}};
            }
            else {
                return RecList<T>{l.v0, RecList<T>{l.v1,  RecList<T>{l.v2, none}}};
            }
        }
    }

    function s_ensure_repr(l: RecList<T>?): ListRepr<T> {
        if(l === none) {
            return none;
        }
        else {
            let hh1 = l.head;
            let tl1 = l.tail;
            if(tl1 === none) {
                return Vector1<T>{hh1};
            }
            else {
                let hh2 = tl1.head;
                let tl2 = tl1.tail;

                if(tl2 === none) {
                    return Vector2<T>{hh1, hh2};
                }
                else {
                    if(tl2.tail === none) {
                        return Vector3<T>{hh1, hh2, tl2.head};
                    }
                    else {
                        return l;
                    }
                }
            }
        }
    }

    recursive method count(): Nat {
        let tl = this.tail;
        if(tl === none) {
            return 1;
        }
        else {
            return 1 + tl.count[recursive]();
        }
    }

    recursive {when T unique Int | Nat} function range(start: T, one: T, count: Nat): RecList<T>? {
        if(count == 0) {
            return none;
        }
        else {
            let ntl = RecList<T>::range[recursive](start + one, one, count - 1);
            return RecList<T>{start, ntl};
        }
    }

    recursive function fill(count: Nat, v: T): RecList<T>? {
        if(count == 0) {
            return none;
        }
        else {
            let ntl = RecList<T>::fill[recursive](count - 1n, v);
            return RecList<T>{v, ntl};
        }
    }

    recursive method zip_index(idx: Nat): RecList<[Nat, T]> {
        let tl = this.tail;
        let hh = this.head;

        let nh = [idx, hh];
        if(tl === none) {
            RecList<[Nat, T]>{nh, none};
        }
        else {
            let ntl = tl.zip_index[recursive](idx + 1n);
            return RecList<[Nat, T]>{nh, ntl};
        }
    }

    recursive method zip<U>(ol: RecList<U>): RecList<[T, U]> {
        let tt = this.tail;
        let th = this.head;

        let ot = ol.tail;
        let oh = ol.head;

        let nh = [th, oh];
        if(\/(tt === none, ot === none)) {
            RecList<[T, U]>{nh, none};
        }
        else {
            let ntl = tt.zip<U>[recursive](ot);
            return RecList<[T, U]>{nh, ntl};
        }
    }

    recursive function s_append(l: RecList<T>?, r: RecList<T>): RecList<T> {
        if(l == none) {
            return r;
        }
        else {
            return RecList<T>{l.head, RecList<T>::s_append[recursive](l.tail, r)};
        }
    }

    recursive function s_slice_start(l: RecList<T>?, idx: Nat): RecList<T>? {
        if(l == none) {
            return none;
        }
        elif(idx == 0) {
            return l;
        }
        else {
            return RecList<T>::s_slice_start[recursive](l.tail, idx - 1);
        }
    }

    recursive function s_slice_end(l: RecList<T>?, idx: Nat): RecList<T>? {
        if(l == none) {
            return none;
        }
        elif(idx == 0) {
            return none;
        }
        else {
            return RecList<T>{l.head, RecList<T>::s_slice_end[recursive](l.tail, idx - 1)};
        }
    }

    recursive method safe_get(i: Nat): T {
        if(i == 0) {
            return this.head;
        }
        else {
            let tl = this.tail;
            assert(tl !== none);

            return tl.safe_get[recursive](i - 1);
        }
    }

    recursive method has_pred(p: recursive? pred(_: T) -> Bool): Bool {
        if(p[recursive?](this.head)) {
            return true;
        }
        else {
            let tl = this.tail;
            if(tl === none) {
                return false;
            }
            else {
                return tl.has_pred[recursive](p);
            }
        }
    }

    recursive method has_pred_idx(idx: Nat, p: recursive? pred(_: T, _: Nat) -> Bool): Bool {
        if(p[recursive?](this.head, idx)) {
            return true;
        }
        else {
            let tl = this.tail;
            if(tl === none) {
                return false;
            }
            else {
                return tl.has_pred_idx[recursive](idx + 1n, p);
            }
        }
    }

    recursive method find_pred(idx: Nat, p: recursive? pred(_: T) -> Bool): Nat? {
        if(p[recursive?](this.head)) {
            return idx;
        }
        else {
            let tl = this.tail;
            if(tl === none) {
                return none;
            }
            else {
                return tl.find_pred[recursive](idx + 1n, p);
            }
        }
    }

    recursive method find_pred_idx(idx: Nat, p: recursive? pred(_: T, _: Nat) -> Bool): Nat? {
        if(p[recursive?](this.head, idx)) {
            return idx;
        }
        else {
            let tl = this.tail;
            if(tl === none) {
                return none;
            }
            else {
                return tl.find_pred_idx[recursive](idx + 1n, p);
            }
        }
    }

    recursive method find_last_pred(idx: Nat, p: recursive? pred(_: T) -> Bool): Nat? {
        let tl = this.tail;

        if(tl === none) {
            if(p[recursive?](this.head)) {
                return idx;
            }
            else {
                return none;
            }
        }
        else {
            let tres = tl.find_last_pred_idx[recursive](idx + 1n, p);

            if(tres !== none) {
                return tres;
            }
            else {
                if(p[recursive?](this.head);) {
                    return idx;
                }
                else {
                    return none;
                }
            }
        }
    }

    recursive method find_last_pred_idx(idx: Nat, p: recursive? pred(_: T, _: Nat) -> Bool): Nat? {
        let tl = this.tail;

        if(tl === none) {
            if(p[recursive?](this.head, idx)) {
                return idx;
            }
            else {
                return none;
            }
        }
        else {
            let tres = tl.find_last_pred_idx[recursive](idx + 1n, p);

            if(tres !== none) {
                return tres;
            }
            else {
                if(p[recursive?](this.head, idx)) {
                    return idx;
                }
                else {
                    return none;
                }
            }
        }
    }

    recursive method filter_pred(p: recursive? pred(_: T) -> Bool): RecList<T>? {
        let tl = this.tail;
        let hh = this.head;

        let ph = p[recursive?](hh);
        if(tl === none) {
            if(ph) {
                return RecList<T>{hh, none};
            }
            else {
                return none;
            }
        }
        else {
            let ntl = tl.filter_pred[recursive](p);
            if(ph) {
                return RecList<T>{hh, ntl};
            }
            else {
                return ntl;
            }
        }
    }

    recursive method filter_pred_idx(idx: Nat, p: recursive? pred(_: T, _: Nat) -> Bool): RecList<T>? {
        let tl = this.tail;
        let hh = this.head;

        let ph = p[recursive?](hh, idx);
        if(tl === none) {
            if(ph) {
                return RecList<T>{hh, none};
            }
            else {
                return none;
            }
        }
        else {
            let ntl = tl.filter_pred_idx[recursive](idx + 1n, p);
            if(ph) {
                return RecList<T>{hh, ntl};
            }
            else {
                return ntl;
            }
        }
    }

    recursive method map<U>(f: recursive? fn(_: T) -> U): RecList<U> {
        let tl = this.tail;
        let hh = this.head;

        let nh = f[recursive?](hh);
        if(tl === none) {
            return RecList<U>{nh, none};
        }
        else {
            let ntl = tl.map<U>[recursive](f);
            return RecList<U>{nh, ntl};
        }
    }

    recursive method map_idx<U>(idx: Nat, f: recursive? fn(_: T, _: Nat) -> U): RecList<U> {
        let tl = this.tail;
        let hh = this.head;

        let nh = f[recursive?](hh, idx);
        if(tl === none) {
            return RecList<U>{nh, none};
        }
        else {
            let ntl = tl.map<U>[recursive](idx + 1n, f);
            return RecList<U>{nh, ntl};
        }
    }

    recursive method min_arg<U unique Orderable>(idx: Nat, f: recursive? fn(v: T) -> U): Nat, U {
        let tl = this.tail;
        let hh = this.head;
        let hu = f[recursive?](hh);

        if(tl === none) {
            return idx, hu;
        }
        else {
            let ntl, ntu = tl.min_arg<U>[recursive](idx + 1n, f);
            if(ntu < hu) {
                return ntl, ntu;
            }
            else {
                return idx, hu;
            }
        }
    }

    recursive method max_arg<U unique Orderable>(idx: Nat, f: recursive? fn(v: T) -> U): Nat, U {
        let tl = this.tail;
        let hh = this.head;
        let hu = f[recursive?](hh);

        if(tl === none) {
            return idx, hu;
        }
        else {
            let ntl, ntu = tl.min_arg<U>[recursive](idx + 1n, f);
            if(ntu > hu) {
                return ntl, ntu;
            }
            else {
                return idx, hu;
            }
        }
    }

    recursive method {when T unique Algebraic} sum(): T {
        let tl = this.tail;
        let hh = this.head;

        if(tl === none) {
            return hh;
        }
        else {
            return hh + tl.sum[recursive]();
        }
    }

    recursive method sort(cmp: recursive? pred(_: T, _: T) -> Bool): RecList<T> {
        let tl = this.tail;
        let hh = this.head;

        if(tl === none) {
            return this;
        }
        else {
            let ntl = tl.sort[recursive](cmp);
            return ntl.sort_insert[recursive](hh, cmp);
        }
    }

    recursive method sort_insert(v: T, cmp: recursive? pred(_: T, _: T) -> Bool): RecList<T> {
        let tl = this.tail;
        let hh = this.head;

        if(!cmp[recursive?](hh, v)) {
            return RecList<T>{v, this};
        }
        else {
            if(tl === none) {
                return RecList<T>{hh, RecList<T>{v, none}};
            }
            else {
                let ntl = tl.sort_insert[recursive](v, cmp);
                return RecList<T>{hh, ntl};
            }
        }
    }

    recursive method unique_from_sorted(prev: T, eq: recursive? pred(_: T, _: T) -> Bool): RecList<T>? {
        let tl = this.tail;
        let hh = this.head;

        if(eq[recursive?](prev, hh)) {
            if(tl === none) {
                return none;
            }
            else {
                return tl.unique_from_sorted[recursive](prev, eq);
            }
        }
        else {
            if(tl === none) {
                return RecList<T>{hh, none};
            }
            else {
                let tll = tl.unique_from_sorted[recursive](hh, eq);
                return RecList<T>{hh, tll};
            }
        }
    }
    
    recursive method reverse(rl: RecList<T>): RecList<T> {
        let tl = this.tail;
        let hh = this.head;

        if(tl === none) {
            return RecList<T>{hh, rl};
        }
        else {
            return tl.reverse[recursive](RecList<T>{hh, rl});
        }
    }

    recursive method reduce<U>(uu: U, op: recursive? fn(_: U, _: T) -> U): U {
        let tl = this.tail;
        let hh = this.head;

        let nu = op[recursive?](uu, hh);
        if(tl === none) {
            return nu;
        }
        else {
            return tl.reduce[recursive](nu, op);
        }
    }

    recursive function reduce_idx<U>(init: U, idx, Nat, op: recursive? fn(_: U, _: T, _: Nat) -> U): U {
        let tl = this.tail;
        let hh = this.head;

        let nu = op[recursive?](uu, hh, idx);
        if(tl === none) {
            return nu;
        }
        else {
            return tl.reduce_idx[recursive](nu, idx + 1n, op);
        }
    }

    recursive function transduce<E, U>(env: E, op: recursive? fn(_: E, _: T) -> E, U): E, RecList<U> {
        let tl = this.tail;
        let hh = this.head;

        let nenv, nu = op[recursive?](env, hh);
        if(tl === none) {
            return nenv, RecList<U>{nu, none};
        }
        else {
            let tlenv, tll = tl.transduce[recursive](nenv, op);
            return tlenv, RecList<U>{nu, tll};
        }
    }

    recursive function s_transduce_idx<E, U>(env: E, idx: Nat op: recursive? fn(_: E, _: T, _: Nat) -> E, U): E, RecList<U> {
        let tl = this.tail;
        let hh = this.head;

        let nenv, nu = op[recursive?](env, hh, idx);
        if(tl === none) {
            return nenv, RecList<U>{nu, none};
        }
        else {
            let tlenv, tll = tl.transduce_idx[recursive](nenv, idx + 1n, op);
            return tlenv, RecList<U>{nu, tll};
        }
    }
}

internal typedef ListRepr<T> = None | Vector1<T> | Vector2<T> | Vector3<T> | RecList<T>;

