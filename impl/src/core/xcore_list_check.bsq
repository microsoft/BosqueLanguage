            let gt21 = f[recursive?](l.v2) > f[recursive?](l.v1);
            let gt20 = f[recursive?](l.v2) > f[recursive?](l.v0);
            let gt10 = f[recursive?](l.v1) > f[recursive?](l.v0);
            if(/\(gt21, gt20)) {
                return 2n;
            }
            elif(gt10) {
                return 1n;
            }
            else {
                return 0n
            }
        }
        else {
            return l.max_arg[recursive](f);
        }
    }

